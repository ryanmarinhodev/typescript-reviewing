{
  "$schema": "https://biomejs.dev/schemas/2.1.3/schema.json",
  "formatter": {
    "indentWidth": 2,
    "lineWidth": 120,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "arrowParentheses": "always",
      "jsxQuoteStyle": "double",
      "quoteStyle": "single",
      "semicolons": "always",
      "trailingCommas": "all",
      "bracketSameLine": false
    }
  },
  "linter": {
    "enabled": true,

    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedImports": "info",
        "useExhaustiveDependencies": "info"
      },
      "complexity": {
        "noForEach": "off",
        "noUselessConstructor": "off",
        "noStaticOnlyClass": "off"
      },
      "a11y": {
        "useButtonType": "off",
        "useKeyWithClickEvents": "off",
        "noStaticElementInteractions": "off"
      },
      "suspicious": {
        "noExplicitAny": "info",
        "noArrayIndexKey": "warn"
      },
      "style": {
        "useSelfClosingElements": "info",
        "noUselessElse": "info"
      }
    }
  }
}